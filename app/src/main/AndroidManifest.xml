<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepolitan.quizapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizApp">
        <activity android:name="appquizipa.codepolitan.quizapp.ui.score.ScoreActivity"/>
        <activity android:name="appquizipa.codepolitan.quizapp.ui.content.TopicActivity"/>
        <activity android:name="appquizipa.codepolitan.quizapp.ui.content.ContentActivityA" />
        <activity android:name="appquizipa.codepolitan.quizapp.ui.prepare.PrepareActivity" />
        <activity android:name="appquizipa.codepolitan.quizapp.ui.content.ContentActivityB" />
        <activity android:name="appquizipa.codepolitan.quizapp.ui.content.ContentActivityC" />
        <activity android:name="appquizipa.codepolitan.quizapp.ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="appquizipa.codepolitan.quizapp.ui.main.MainActivity"/>
    </application>

</manifest>